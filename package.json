{
  "name": "tele",
  "version": "1.0.0",
  "description": "Teleprompter for Mac notch",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && mkdir -p dist/renderer && cp src/renderer/*.html src/renderer/*.css src/renderer/*.js dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "nodemon --watch src --ext ts,js,html,css --exec 'npm run build && electron .'",
    "dist": "npm run build && electron-builder"
  },
  "author": "Saeed Seyfi <me@saeedseyfi.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeedseyfi/tele.git"
  },
  "homepage": "https://github.com/saeedseyfi/tele",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.tele.prompter",
    "productName": "Tele",
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.svg"
    }
  }
}
